{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "allowJs": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}